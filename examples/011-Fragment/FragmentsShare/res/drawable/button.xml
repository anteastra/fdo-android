<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
			<corners 
			    android:radius="6dp" />
			<gradient 
			    android:angle="270" 
			    android:endColor="#261458" 
			    android:startColor="#2165a4" />
			<stroke 
			    android:width="1px" 
			    android:color="#050875" />
			<padding android:left="10dp"
		        android:top="10dp"
		        android:right="10dp"
		        android:bottom="10dp" />
		</shape>
	</item>
	
    <item>
        <shape android:shape="rectangle">
			<corners 
			    android:radius="6dp" />
			<gradient 
			    android:angle="270" 
			    android:endColor="#30196E" 
			    android:startColor="#2A7FCE" />
			<stroke 
			    android:width="1px" 
			    android:color="#050875" />
			<padding android:left="10dp"
		        android:top="10dp"
		        android:right="10dp"
		        android:bottom="10dp" />
		</shape>
	</item>
	
</selector>